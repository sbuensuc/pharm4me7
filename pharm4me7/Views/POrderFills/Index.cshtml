@model IEnumerable<pharm4me7.Models.POrderFill>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Order#
        </th>
        <th>
            Customer
        </th>
        <th>
            Prescription
        </th>
        <th>
            OrderID
        </th>
        <th>
            Date Filled
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            FilledBy
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td data-th="Order #">
            @Html.DisplayFor(modelItem => item.POrderFillId)
        </td>
        <td data-th="Customer">
            @Html.DisplayFor(modelItem => item.POrder.Prescript.Patient.LastName), @Html.DisplayFor(modelItem => item.POrder.Prescript.Patient.FirstName)
        </td>
        <td data-th="Prescription">
            @Html.DisplayFor(modelItem => item.POrder.Prescript.item.Name)
        </td>
        <td data-th="Order ID">
            @Html.DisplayFor(modelItem => item.POrder.Prescript.item.Name) @Html.DisplayFor(modelItem => item.POrder.Prescript.Disp) @Html.DisplayFor(modelItem => item.POrder.Prescript.DispType)
        </td>
        <td data-th="Date Filled">
            @Html.DisplayFor(modelItem => item.DateFilled)
        </td>

        <td data-th="Note">
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td data-th="Filled By">
            @Html.DisplayFor(modelItem => item.Pharmacist.LastName), @Html.DisplayFor(modelItem => item.Pharmacist.FirstName)
        </td>

        <td data-th="Action">
            @Html.ActionLink("Edit", "Edit", new { id=item.POrderFillId }) |
            @Html.ActionLink("Details", "Details", new { id=item.POrderFillId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.POrderFillId })
        </td>
    </tr>
}

</table>
