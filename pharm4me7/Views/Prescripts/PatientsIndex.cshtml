@using pharm4me7.Models
@model IEnumerable<pharm4me7.Models.Prescript>



@{
    ViewBag.Title = "Prescriptions";
}

<h2>Orders</h2>
<h2>Ready for Pickup</h2>
<table id="ordersTable" class="table">
    <tr>
        <th onclick="sortTable(0,1)" data-th="ID">
            ID
        </th>
        <th onclick="sortTable(1,1)" data-th="Date Ordered">
            Date Ordered
        </th>
        <th onclick="sortTable(2,1)" data-th="Pharmacy">
            Pharmacy
        </th>
        <th onclick="sortTable(3,1)" data-th="Address">
            Address
        </th>
        <th onclick="sortTable(4,1)" data-th="Item">
            Item
        </th>
        <th onclick="sortTable(5,1)" data-th="Amount">
            Amount
        </th>
        <th onclick="sortTable(6,1)" data-th="Type">
            Type
        </th>
        <th onclick="sortTable(7,1)" data-th="Status">
            Status
        </th>
        <th onclick="sortTable(8,1)" data-th="Reason">
            Reason
        </th>
    </tr>

    @foreach (var item in Model)
    {
        var orderModel = item.POrders.OrderBy(a => a.Fill).ThenBy(a => a.Accept);
        foreach (var i in orderModel)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => i.PrescriptId)
                </td>
                <td>
                    @if (i.DateOrdered.HasValue)
                    {
                        @i.DateOrdered.Value.ToString("MMM-dd-yyyy")
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Pharmacy.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Pharmacy.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Prescript.item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Prescript.Disp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Prescript.DispType)
                </td>


                <td>
                    @if (i.Accept == false && i.Deny == false)
                    {
                        @: REQUEST PENDING
                    }
                    else if (i.Accept == true && i.Deny == false && i.Fill == false)
                    {
                        @: ORDER IN PROGRESS
                    }
                    else if (i.Accept == false && i.Deny == true)
                    {
                        @: ORDER CANCELLED
                    }
                    else if (i.Fill == true && i.Accept == true && i.Deny == false)
                    {
                        @: ORDER READY FOR PICK UP
                    }
                    else if (i.Fill == true && i.Accept == true && i.Deny == true)
                    {
                        @: ORDER RETRIEVED
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Note)
                </td>
            </tr>
        }
    }
</table>


<h2>Prescriptions</h2>


<table id="prescriptsTable" class="table">
    <tr>
        <th onclick="sortTable(0,2)" data-th="Prescription ID">
            ID
        </th>
        <th onclick="sortTable(1,2)" data-th="Date">
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th onclick="sortTable(2,2)" data-th="Item Prescribed">
            Item
        </th>
        <th onclick="sortTable(3,2)" data-th="Brand">
            Brand
        </th>
        <th onclick="sortTable(4, 2)" data-th="Amount Prescribed">
            Amount
        </th>
        <th onclick="sortTable(5, 2)" data-th="Unit Type">
            Unit Type
        </th>
        <th onclick="sortTable(6, 2)" data-th="Details">
            Details
        </th>

        <th onclick="sortTable(7, 2)" data-th="Refill">
            @Html.DisplayNameFor(model => model.Refill)
        </th>
        <th onclick="sortTable(8, 2)" data-th="Prescribed By">
            Prescribed By
        </th>
        <th onclick="sortTable(9, 2)" data-th="Status">Prescription Status</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrescriptId)
            </td>
            <td>
                @if (item.Date.HasValue)
                {
                    @item.Date.Value.ToString("MMM-dd-yyyy")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sub)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DispType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sig)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Refill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.LastName), @Html.DisplayFor(modelItem => item.Doctor.FirstName)
            </td>
            <td>
                @if (item.Sent == false || item.Sent == null)
                {
                    <text>@Html.ActionLink("Order", "PorderCreate", new { id = item.PrescriptId }, new { @class = "btn btn-primary" })</text>
                }
                @if (item.Sent == true)
                {
                    @: Ordered
                }
            </td>
        </tr>
    }

</table>

<script>
function sortTable(n,t) {
    var table, rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0;
    if (t==1) {
        table = document.getElementById("ordersTable");
    } else if (t==2) {
        table = document.getElementById("prescriptsTable");
    }
  switching = true;
  dir = "asc";
  while (switching) {
	switching = false;
	rows = table.rows;
	for (i = 1; i < (rows.length - 1); i++) {
  	 shouldSwitch = false;
  	x = rows[i].getElementsByTagName("TD")[n];
  	 y = rows[i + 1].getElementsByTagName("TD")[n];
  	if (dir == "asc") {
    	if (x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase()) {
      	 shouldSwitch = true;
      	 break;
    	}
  	 } else if (dir == "desc") {
    	if (x.innerHTML.toLowerCase() < y.innerHTML.toLowerCase()) {
      	 shouldSwitch = true;
      	 break;
    	}
  	 }
	}
	if (shouldSwitch) {
  	 rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
  	 switching = true;
  	switchcount ++;
	} else {
  	 if (switchcount == 0 && dir == "asc") {
    	 dir = "desc";
    	switching = true;
  	 }
	}
  }
}
</script>

